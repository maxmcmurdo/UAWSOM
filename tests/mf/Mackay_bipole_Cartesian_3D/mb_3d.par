! setup.pl -d=3
 &filelist
        typefilelog='regression_test'
	base_filename='mb_3d'
        autoconvert=.false.
        saveprim=.true.
        nwauxio=7
	convert_type='vtuBCCmpi'
 /

 &savelist
        dtsave_log       = 1.d-3
 /

 &stoplist
        time_max            = 1.d-2
 /

 &methodlist
        time_stepper='threestep'
        flux_scheme=20*'hll'
        limiter=20*'cada3'
 /

 &boundlist
       typeboundary_min1=6*'special'
       typeboundary_max1=6*'special'
       typeboundary_min2=6*'special'
       typeboundary_max2=6*'special'
       typeboundary_min3=6*'special'
       typeboundary_max3=6*'special'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=2
        w_refine_weight(4)=0.3
        w_refine_weight(5)=0.3
        w_refine_weight(6)=0.4
        block_nx1=16
        block_nx2=16
        block_nx3=16
        domain_nx1=48
        domain_nx2=32
        domain_nx3=32
        xprobmin1=-4d0
        xprobmax1=4d0
        xprobmin2=-3d0
        xprobmax2=3d0
        xprobmin3=0d0
        xprobmax3=6d0
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.8d0
 /

 &mf_list
        Busr=50.d0
        mf_decay_scale(1)=0.d0
        mf_decay_scale(2)=0.d0
        mf_decay_scale(3)=0.d0
        mf_decay_scale(4)=0.d0
        mf_decay_scale(5)=1.d0
        mf_decay_scale(6)=0.d0
 /
