!==================================================
! Project : 2D MHD alfven shock
! configuration :
! $AMRVAC_DIR/setup.pl -d=2
!=====================================================

 &filelist
        base_filename='output/alfven_hllc_'
        saveprim=.true.
        autoconvert=.true.
        convert_type='vtuBCCmpi'
        nwauxio=3
        usr_filename='alfven.vtk'
 /

 &savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave=0.01d0,0.01d0
 /

 &stoplist
        dtmin=1.D-6
        time_max=1.0d0
 /

 &methodlist
        time_stepper=  'threestep'
        flux_scheme=   20*'hllc'
        limiter= 20*'koren'
        fix_small_values=T
        check_small_values=F
        small_values_method='average'
        small_values_daverage=4
        small_pressure=1.0d-7
 /

 &boundlist
        typeboundary_min1=6*'cont'
        typeboundary_max1=6*'cont'
        typeboundary_min2=6*'cont'
        typeboundary_max2=6*'cont'
 /

 &meshlist
        refine_criterion=3
        refine_max_level=6
        w_refine_weight(1)=0.6d0
        w_refine_weight(2)=0.1d0
        w_refine_weight(3)=0.1d0
        w_refine_weight(4)=0.2d0
        refine_threshold=20*0.2d0
        derefine_ratio=20*0.125d0
        domain_nx1=128
        domain_nx2=128
        block_nx1=16
        block_nx2=16
        xprobmin1=-0.5d0
        xprobmax1=3.0d0
        xprobmin2=-1.0d0
        xprobmax2=2.5d0
 /

 &paramlist
        slowsteps=10
        typecourant='maxsum'
        courantpar=0.8d0
 /

 &mhd_list
        typedivbfix='multigrid'
 /

 &usr_list
        delta=2.5d0
        thetab=40.0d0
        betab=0.1d0
        xshock=-0.3d0
        type=2
        shiftframe=.true.
        scalefactor=0.5d0
 /
