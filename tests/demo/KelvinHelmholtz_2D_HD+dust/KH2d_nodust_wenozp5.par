!setup.pl -d=2

&filelist
        base_filename='output/kh2d_nodust_wenozp5_'  ! Base file name for dat/vtu output
        saveprim=.true.
        autoconvert=.true.
	convert_type='vtuBCCmpi'
        nwauxio=4
/

&savelist
        itsave(1,1)=0
        itsave(1,2)=0
        dtsave_log=0.1d0          ! For the log
        dtsave_dat=0.5d0          ! For dat/vtu output
/

&stoplist
        dtmin=1.0d-12
        time_max=40.d0
/

&methodlist
        time_stepper=  'threestep'
        flux_scheme=20*'hllc'
        limiter=20*'wenozp5'
        check_small_values=.true.
        fix_small_values=.true.
        small_values_method='replace'
        small_pressure=1.0d-12
/

&boundlist
        typeboundary_min1 = 4*'periodic'
        typeboundary_max1 = 4*'periodic'
        typeboundary_min2 = 'symm','symm','asymm','symm'
        typeboundary_max2 = 'symm','symm','asymm','symm'
/

&meshlist
        refine_criterion=3
        refine_max_level=6
        w_refine_weight(1)=0.5d0
        w_refine_weight(5)=0.5d0
        block_nx1=16
        block_nx2=16
        domain_nx1=128
        domain_nx2=64
        xprobmin1=-1.5d0
        xprobmax1=1.5d0
        xprobmin2=-0.75d0
        xprobmax2=0.75d0
/

&paramlist
        typecourant='maxsum'
        courantpar=0.8d0
        slowsteps=100
/

&hd_list
      hd_dust=.false.
/

&usr_list
   delv=0.2d0
   delvy=0.001d0
/
