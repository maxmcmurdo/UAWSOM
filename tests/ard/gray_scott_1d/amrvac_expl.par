!====================================================
! Project : Reaction Diffusion in 1D
! Added nonlinear advection
!=====================================================

 &filelist
        base_filename='output/expl_'
    	convert_type='vtuBCCmpi'
        autoconvert=T
        type_endian=1
 /

 &savelist
        dtsave_log=0.5d3
        dtsave_dat=0.5d3
        itsave(1,2)=0
 /

 &stoplist
        time_max=1d5
 /

 &methodlist
        time_stepper = 'twostep'
        flux_scheme = 20*'tvdlf'
        limiter= 20*'mp5'
 /

 &boundlist
        typeboundary_min1=2*'periodic'
        typeboundary_max1=2*'periodic'
 /

 &meshlist
        refine_max_level=1
        refine_threshold=20*0.1d0
        block_nx1=16
        domain_nx1=512
        iprob=3
        xprobmin1=0.0d0
        xprobmax1=2.5d0
 /

 &paramlist
       dtdiffpar=0.9d0
       courantpar=0.8d0
       typecourant='minimum'
 /

 &ard_list
       equation_name = "gray-scott"
       D1 = 2.0d-5
       D2 = 1.0d-5
       gs_F=0.029d0
       gs_k=0.057d0
       adv_pow = 2
       A1 = 3.0d-5
       A2 = -3.0d-5
 /
