!=====================================================
! Pure advection.
!=====================================================

&filelist
    base_filename = 'output/pure_adv_'
    convert_type='vtuBCCmpi'
    autoconvert=T
/

&savelist
    tsave(1,2) = 0.0d0
    dtsave_log = 2.5d0
    dtsave_dat = 2.0d-2
/

&stoplist
    time_max = 2.0d0
/

&methodlist
    flux_scheme     = 20*'tvdlf'
    time_stepper    = 'threestep'
    !time_integrator = 'IMEX_Euler'
    limiter         = 20*'woodward'
/

&boundlist
    typeboundary_min1 = 'periodic'
    typeboundary_max1 = 'periodic'
    typeboundary_min2 = 'periodic'
    typeboundary_max2 = 'periodic'
/

&meshlist
    refine_max_level = 4
    refine_threshold = 20*0.1d0

    domain_nx1 = 128
    domain_nx2 = 128
    block_nx1  = 16
    block_nx2  = 16

    xprobmin1 = -4.0d0
    xprobmax1 = 4.0d0
    xprobmin2 = -4.0d0
    xprobmax2 = 4.0d0
/

&paramlist
    courantpar = 0.4d0
    !slowsteps = 100
    !dtdiffpar = 100.0d0
/

&ard_list
    equation_name = "no_reac"
    D1   = 0.0d0
    A1   = 1.0d1 1.0d0
/
