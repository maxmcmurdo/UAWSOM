 &filelist
        base_filename = 'swcta'
        autoconvert   = .true.
        convert_type='vtuBCCmpi'
        saveprim=.true.
        nwauxio=7
 /
        nocartesian=.true.

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        dtsave_log    = 0.01d0
        dtsave_dat    = 5.1746d0 !this is every ten hours
 /

 &stoplist
        time_max      = 776.19d0 !this is after 1500 hours
 /

 &methodlist
        time_stepper   = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'koren'
 /
        small_values_method = 'average'

 &boundlist
        typeboundary_min1=8*'special'
        typeboundary_max1=8*'special'
        typeboundary_min2='symm','symm','asymm','asymm','symm','symm','asymm','asymm'
        typeboundary_max2='symm','symm','asymm','asymm','symm','symm','asymm','asymm'
 / 

 &meshlist
        refine_criterion=3
        refine_max_level=3
        block_nx1=16
        block_nx2=16
        domain_nx1=128
        domain_nx2=64
        xprobmin1=1.d0
        xprobmax1=216.d0
        xprobmin2=0.d0
        xprobmax2=0.5d0
        stretch_dim(1)='uni'
 /

 &paramlist
        typecourant='maxsum'
        courantpar=0.5d0
 /

 &mhd_list
        typedivbfix   = 'powell'
        Busr=2.40858d0
        B0field=.true.
        boundary_divbfix(1)=.false.
        boundary_divbfix(2)=.false.
        boundary_divbfix(3)=.false.
        boundary_divbfix(4)=.false.
 /
