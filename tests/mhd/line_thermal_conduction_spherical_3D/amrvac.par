!setup.pl -d=3

 &filelist
   base_filename    = 'ltc_sphere_3d'
   autoconvert      = .true.
   convert_type='vtuBCCmpi'
   saveprim         = .true.
   nwauxio          =1
 /
 
 &savelist
    itsave(1,1)=0
    itsave(1,2)=0
    dtsave_log       = 1.d0
    dtsave_dat       = 1.d0
 /
    ditsave_log       = 2
    ditsave_dat       = 4

 &stoplist
   time_max            = 1.d1
 /
   it_max =40

 &methodlist
   time_stepper     = 'onestep'
   flux_scheme       = 20*'nul'
   limiter    = 20*'minmod'
 /
 &boundlist
        typeboundary_min1=8*'cont'
        typeboundary_max1=8*'cont'
        typeboundary_min2=8*'pole'
        typeboundary_max2=8*'pole'
        typeboundary_min3=8*'periodic'
        typeboundary_max3=8*'periodic'
 /
        typeboundary_min2=8*'cont'
        typeboundary_max2=8*'cont'
 &meshlist
        refine_criterion=3
        refine_max_level=3
        w_refine_weight(5)=1.d0
        block_nx1=16
        block_nx2=16
        block_nx3=16
        domain_nx1=32
        domain_nx2=32
        domain_nx3=64
        xprobmin1=1.d0
        xprobmax1=3.d0
        xprobmin2=0.0d0
        xprobmax2=0.5d0
        xprobmin3=0.d0
        xprobmax3=1.d0
 /

 &paramlist
 /

 &mhd_list
  mhd_thermal_conduction =T
  Busr=1.d-5
  typedivbfix='none'
 /

 &tc_list
  tc_perpendicular=.false.
  tc_saturate     =.false.
  tc_k_para =0.01d0
  tc_slope_limiter='no'
 /
