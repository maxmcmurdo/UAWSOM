 &filelist
        autoconvert   = T
        saveprim      = T
        base_filename = 'fl_2d'
 /

 &savelist
        itsave(1,1)   = 0
        itsave(1,2)   = 0
        dtsave_log    = 0.1
        dtsave_dat    = 0.5
 /

 &stoplist
        time_max      = 10.0
 /

 &methodlist
        time_stepper = 'threestep'
        flux_scheme     = 20*'hll'
        limiter  = 20*'cada'
 /

 &boundlist
        typeboundary_min1  = 8*'periodic'
        typeboundary_min2  = 8*'periodic'
        typeboundary_max1  = 8*'periodic'
        typeboundary_max2  = 8*'periodic'
 /

 &meshlist
        iprob = 1
        refine_criterion = 3
        refine_max_level = 1
    	refine_threshold = 20*0.4d0
        w_refine_weight(1)=0.5d0
        w_refine_weight(4)=0.5d0
        domain_nx1    = 128
        domain_nx2    = 64
        xprobmin1     = -1.d0
        xprobmax1     = 1.d0
        xprobmin2     = -0.5d0
        xprobmax2     = 0.5d0
 /

 &paramlist
        courantpar = 0.50d0
 /

 &mhd_list
        typedivbfix   = 'ct'
 /
